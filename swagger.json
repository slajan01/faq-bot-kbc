{
  "openapi": "3.0.0",
  "info": {
    "title": "FAQ Bot API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/api"
    }
  ],
  "paths": {
    "/faq": {
      "get": {
        "summary": "Získá odpověď na zadanou otázku.",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": true,
            "description": "Otázka od uživatele",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Úspěšná odpověď.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "answer": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}